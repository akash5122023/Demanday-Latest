<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn" internalLogFile="internal-nlog.txt">

	<!-- Enable ASP.NET Core layout renderers -->
	<extensions>
		<add assembly="Sentry.NLog" />
		<!-- Include your assembly containing the TextBoxTarget class -->
	</extensions>

	<targets>
		<target xsi:type="Sentry" name="sentry"
                dsn="http://2ae72040ad1de90745b9f72be614d48e@server.abitcons.com:9000/18"
                layout="${message}" />

		<!-- New file target -->
		<target xsi:type="File" name="logfile"
                fileName="logs/${shortdate}/${date:format=HH}.log"
                layout="${longdate} ${uppercase:${level}} ${message}"
                archiveEvery="Hour"
                archiveNumbering="Rolling"
                maxArchiveFiles="24" />

		<!-- New TextBox target -->
		<target name="textBox" xsi:type="TextBoxTarget"
                FormName="Console" ControlName="tbConsole"
                layout="${longdate} ${uppercase:${level}} ${message} ${exception}" />
	</targets>

	<rules>
		<logger name="*" minlevel="Info" writeTo="sentry,logfile" />
		<!-- Add rule for TextBox -->
	</rules>
</nlog>
